<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="환율 계산"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Currency1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="송금국가 : 미국(USD)"
 />

    <TextView
        android:id="@+id/Currency2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수취국가 : 한국(KRW)" />

    <TextView
        android:id="@+id/Currency3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환율 : 0 KRW / USD" />

    <TextView
        android:id="@+id/Currency4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조회시간 :" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="43dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Currency5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="송금액 : " />

        <EditText
            android:id="@+id/Currency5_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="금액 입력"
            android:ems="3"
            android:inputType="number" />

        <TextView
            android:id="@+id/Currency5_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" USD" />
    </LinearLayout>

    <TextView
        android:id="@+id/Currency6"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:text="수취금액은 0 KRW 입니다" />

<NumberPicker
    android:id="@+id/Currency_Picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/contryPickerCustom"
    android:layout_marginTop="10dp"
    />

</LinearLayout>